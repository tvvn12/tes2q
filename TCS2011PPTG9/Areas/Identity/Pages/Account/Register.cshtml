@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <h1 class="text-white">@ViewData["Title"]</h1>


<style>
body { background-image: url('https://artiomlk.com/bg1.jpg'); }
</style>
<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group text-white">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group text-white">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group text-white">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group text-white">
                    <label asp-for="Input.Number"></label>
                    <input asp-for="Input.Number" class="form-control" />
                    <span asp-validation-for="Input.Number" class="text-danger"></span>
                </div>

                <div class="form-group text-white">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group text-white">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-group text-white">
                    <label asp-for="Input.DepartmentId"></label>
                    <select asp-for="Input.DepartmentId" asp-items="ViewBag.DepartmentId" class="form-control"></select>
                    <span asp-validation-for="Input.DepartmentId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h1 class="text-white">Welcome to TCS2011PPTG9</h1>
                <hr />

            </section>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}